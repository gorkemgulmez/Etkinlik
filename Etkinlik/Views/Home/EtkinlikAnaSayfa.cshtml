@model List<PostModel>
@using Etkinlik.Controllers
@inject PostController PostController
@inject UserManager<ApplicationUser> userManager
@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <title>Index</title>

    <link href="~/css/StyleSheet.css" rel="stylesheet" type="text/css" />
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link rel="stylesheet" href="css/bootstrap.min.css">

    <script src="~/lib/Chart.bundle.min.js"></script>
    <script type="text/javascript" src="~/js/SurveyIndex.js"></script>

    <script>

        jQuery(document).ready(function ($) {
            var slideCount = $('#slider ul li').length;
            var slideWidth = $('#slider ul li').width();
            var slideHeight = $('#slider ul li').height();
            var sliderUlWidth = slideCount * slideWidth;

            $('#slider').css({ width: slideWidth, height: slideHeight });

            $('#slider ul').css({ width: sliderUlWidth, marginLeft: - slideWidth });

            $('#slider ul li:last-child').prependTo('#slider ul');

            function moveLeft() {
                $('#slider ul').animate({
                    left: + slideWidth
                }, 200, function () {
                    $('#slider ul li:last-child').prependTo('#slider ul');
                    $('#slider ul').css('left', '');
                });
            };

            function moveRight() {
                $('#slider ul').animate({
                    left: - slideWidth
                }, 200, function () {
                    $('#slider ul li:first-child').appendTo('#slider ul');
                    $('#slider ul').css('left', '');
                });
            };

            $('a.control_prev').click(function () {
                moveLeft();
            });

            $('a.control_next').click(function () {
                moveRight();
            });

        });

    </script>





</head>
<body>
    <div class="container" style="margin-top:80px">
        <div class="row no-gutter">
            <div class="col-lg-6">
                <div class="col-height left">
                    <div class="col-text text">
                        <div class="panel panel-default">
                            <div class="heading">
                                <div class="headingg">
                                    <strong style="color:white">Etkinlik Tablosu</strong>
                                </div>

                            </div>


                            <div class="card-body table-responsive">
                                <table class="table table-hover">
                                    <thead class="text-warning" style="color:gray">
                                        <tr>

                                            <td>Etkinlik Adı</td>
                                            <td>Etkinlik Ayrıntısı</td>
                                            <td>Etkinlik Saat ve Tarihi</td>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var post in Model)
                                        {
                                            <tr>
                                                <td>@post.PostName</td>
                                                <td>@post.PostDesc</td>
                                                <td>@post.PostDate.Day:@post.PostDate.Month:@post.PostDate.Year @post.PostTime</td>

                                                @{ string linkName = "link" + post.Id;
                                                    string linkSharp = "#" + linkName;}
                                                <td class="td-actions text-right">

                                                    <i class="glyphicon glyphicon-user" style="color:gray" data-toggle="collapse" data-parent="#accordion1" href=@linkSharp></i>
                                                    @if (!PostController.HasIn(post, userManager.GetUserId(User)))
                                                    {
                                                        <a href="Post/join/@post.Id" button type="button" style="color:gray;right: 15px;" class="btn btn-primary btn-link btn-sm" data-original-title="Katıl" data-parent="#accordion1">

                                                            <i class="glyphicon glyphicon-plus"></i>

                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a href="Post/quit/@post.Id" button type="button" style="color:gray;right: 15px;" class="btn btn-primary btn-link btn-sm" data-original-title="Çık" data-parent="#accordion1">
                                                            <i class="glyphicon glyphicon-remove"></i>


                                                        </a>

                                                    }


                                                    <ul id=@linkName class="collapse">
                                                        @foreach (var userName in PostController.getUsers(post))
                                                        {
                                                            <li>@userName</li>
                                                        }
                                                    </ul>
                                                </td>


                                            </tr>
                                                    }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
              
                <div id="slider">
                    <a href="#" class="control_next">></a>
                    <a href="#" class="control_prev"><</a>
                    <ul>
