@model List<PostModel>
@using Etkinlik.Controllers
@inject PostController PostController
@inject UserManager<ApplicationUser> userManager
@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/css/EtkinlikStyle.css" rel="stylesheet" type="text/css" />
</head>
<body>
   
    <div class="container" style="margin-top:40px">
        <div class="row">



            <div class="col-lg-6 col-md-12">

                <div class="panel panel-default">

                    <center>
                        <strong style="color:gray">Etkinlik Tablosu</strong>
                    </center>
                    <hr>


                    <div class="card-body table-responsive">
                        <table class="table table-hover">
                            <thead class="text-warning" style="color:gray">
                                <tr>
                                   
                                    <th>Etkinlik Adı</th>
                                    <th>Etkinlik Ayrıntısı</th>
                                    <th>Etkinlik Saat ve Tarihi</th>
                                  
                                </tr>
                            </thead>
                            <tbody>
@foreach (var post in Model)
{
                                <tr>
                                    <td>@post.PostName</td>
                                    <td>@post.PostDesc</td>
                                    <td>@post.PostDate.Day:@post.PostDate.Month:@post.PostDate.Year @post.PostTime</td>

                                    @{ string linkName = "link" + post.Id;
                                        string linkSharp = "#" + linkName;}
                                    <td class="td-actions text-right">
                                        <button button type="button" class="btn btn-default" data-toggle="collapse" data-parent="#accordion1" href=@linkSharp>Katılımcılar</button>
                                        @if (!PostController.HasIn(post, userManager.GetUserId(User)))
                                        {
                                            <a href="Post/join/@post.Id" button type="submit" class="btn btn-default" data-parent="#accordion1">Katıl</a>
                                        }
                                        else
                                        {
                                            <a href="Post/quit/@post.Id" button type="submit" class="btn btn-default" data-parent="#accordion1">Çık</a>
                                        }

                                        
                                        <ul id=@linkName class="collapse">
                                    @foreach (var userName in PostController.getUsers(post))
                                    {
                                        <li>@userName</li>
                                    }
                                </ul>
                                    </td>


                                </tr>
}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            

            <div class="col-lg-6 col-md-12">
                <div class="panel panel-default">
                    <center>
                        <strong style="color:gray">Etkinlik Tablosu</strong>

                    </center>
                    <hr>


                    <div class="card-body table-responsive">
                        <table class="table table-hover">
                            <thead class="text-warning" style="color:gray">
                                <tr>
                                    <th>Etkinlik Adı</th>
                                    <th>Etkinlik Ayrıntısı</th>
                                    <th>Etkinlik Saat ve Tarihi</th>

                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>dfg</td>
                                    <td>Dakota</td>
                                    <td>dfg</td>

                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            </div>
        </div>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-default">

                    <p>dsf</p>

                </div>
        
           
                </div>
          
        </div>
    </div>
    </body>


</html>