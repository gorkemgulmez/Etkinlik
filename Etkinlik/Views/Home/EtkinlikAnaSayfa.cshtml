@model List<PostModel>
@using Etkinlik.Controllers
@inject PostController PostController
@inject UserManager<ApplicationUser> userManager
@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/css/StyleSheet.css" rel="stylesheet" type="text/css" />
 
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>


</head>
<body>
    

    <div class="container" style="margin-top:40px">
        <div class="row">



            <div class="col-lg-6 col-md-12">

                <div class="panel panel-default">
                    <div class="heading">
                        <div style="border-radius: 3px;margin: -20px auto 0 auto;padding: 15px 0;position: absolute;background: red;width: 90%;text-align: center;right: 0;left: 0;">
                            <strong style="color:white">Etkinlik Tablosu</strong>
                        </div>
                       
                    </div>


                    <div class="card-body table-responsive">
                        <table class="table table-hover">
                            <thead class="text-warning" style="color:gray">
                                <tr>

                                    <th>Etkinlik Adı</th>
                                    <th>Etkinlik Ayrıntısı</th>
                                    <th>Etkinlik Saat ve Tarihi</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var post in Model)
                                {
                                    <tr>
                                        <td>@post.PostName</td>
                                        <td>@post.PostDesc</td>
                                        <td>@post.PostDate.Day:@post.PostDate.Month:@post.PostDate.Year @post.PostTime</td>

                                        @{ string linkName = "link" + post.Id;
                                            string linkSharp = "#" + linkName;}
                                        <td class="td-actions text-right">
                                            <button button type="button" class="btn btn-default" data-toggle="collapse" data-parent="#accordion1" href=@linkSharp>Katılımcılar</button>
                                            @if (!PostController.HasIn(post, userManager.GetUserId(User)))
                                            {
                                                <a href="Post/join/@post.Id" button type="submit" class="btn btn-primary btn-link btn-sm" data-original-title="Katıl" data-parent="#accordion1">

                                                    <i class="glyphicon glyphicon-plus"></i>
                                                    <div class="ripple-container"></div>
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="Post/quit/@post.Id" button type="submit" class="btn btn-primary btn-link btn-sm" data-original-title="Katıl" data-parent="#accordion1">
                                                    <i class="glyphicon glyphicon-remove"></i>
                                                    <div class="ripple-container"></div>

                                                </a>

                                            }


                                            <ul id=@linkName class="collapse">
                                                @foreach (var userName in PostController.getUsers(post))
                                                {
                                                    <li>@userName</li>
                                                }
                                            </ul>
                                        </td>


                                    </tr>
                                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


            <div class="col-lg-6 col-md-12">
                <div class="panel panel-default">
                     <div class="heading">
                        <center>
                            <strong style="color:white">Etkinlik Tablosu</strong>
                        </center>
                        <hr>
                    </div>


                    <div class="card-body table-responsive">
                        <table class="table table-hover">
                            <thead class="text-warning" style="color:gray">
                                <tr>
                                    <th>Etkinlik Adı</th>
                                    <th>Etkinlik Ayrıntısı</th>
                                    <th>Etkinlik Saat ve Tarihi</th>

                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>dfg</td>
                                    <td>Dakota</td>
                                    <td>dfg</td>

                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>




            <div class="col-lg-6 col-md-12">

                <div class="panel panel-default">
                    <div class="heading">
                        <center>
                            <strong style="color:white">Etkinlik Tablosu</strong>
                        </center>
                        <hr>
                    </div>


                    <div class="card-body table-responsive">
                        <table class="table table-hover">
                            <thead class="text-warning" style="color:gray">
                                <tr>

                                    <th>Etkinlik Adı</th>
                                    <th>Etkinlik Ayrıntısı</th>
                                    <th>Etkinlik Saat ve Tarihi</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var post in Model)
                                {
                                    <tr>
                                        <td>@post.PostName</td>
                                        <td>@post.PostDesc</td>
                                        <td>@post.PostDate.Day:@post.PostDate.Month:@post.PostDate.Year @post.PostTime</td>

                                        @{ string linkName = "link" + post.Id;
                                            string linkSharp = "#" + linkName;}
                                        <td class="td-actions text-right">
                                            <button button type="button" class="btn btn-default" data-toggle="collapse" data-parent="#accordion1" href=@linkSharp>Katılımcılar</button>
                                            @if (!PostController.HasIn(post, userManager.GetUserId(User)))
                                            {
                                                <a href="Post/join/@post.Id" button type="submit" class="btn btn-primary btn-link btn-sm" data-original-title="Katıl" data-parent="#accordion1">

                                                    <i class="glyphicon glyphicon-plus"></i>
                                                    <div class="ripple-container"></div>
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="Post/quit/@post.Id" button type="submit" class="btn btn-primary btn-link btn-sm" data-original-title="Çık" data-parent="#accordion1">
                                                    <i class="glyphicon glyphicon-remove"></i>
                                                    <div class="ripple-container"></div>

                                                </a>

                                            }


                                            <ul id=@linkName class="collapse">
                                                @foreach (var userName in PostController.getUsers(post))
                                                {
                                                    <li>@userName</li>
                                                }
                                            </ul>
                                        </td>


                                    </tr>
                                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>



            <div class="col-lg-6 col-md-12">

                <div class="panel panel-default">
                    <div class="heading">
                        <center>
                            <strong style="color:white">Etkinlik Tablosu</strong>
                        </center>
                        <hr>
                    </div>


                </div>

            </div>
            </div></div>
</body>


</html>