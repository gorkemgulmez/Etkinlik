@model List<SurveyModel>
@{
}

<!DOCTYPE html>
<html>
<head>
    @Html.Partial("~/Views/metaTag.cshtml")
    <title> Post list </title>
</head>
<body>
    
    <div id="myCarousel" class="carousel slide" data-ride="carousel">

        <!-- Wrapper for slides -->
        <div class="carousel-inner">

            <div class="item active ">
                @foreach (var option in Model[0].SurveyChoiceModel)
                {
                    <a href="/Survey/vote/@option.Id">@option.ChoiceName</a>
                }
            </div>

            @for (var i = 1; i < Model.Count; i++)
            {
            <div class="item" style="margin:100px; margin-left:300px">
                <p>@Model[i].SurveyTitle</p>
                @foreach (var option in Model[i].SurveyChoiceModel)
                {
                <div>
                    <a href="/Survey/vote/@option.Id">@option.ChoiceName</a>
                </div>
                }
            </div>
            }
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</body>
</html>