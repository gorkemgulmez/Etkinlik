
@{
    ViewData["Title"] = "SignUp";
}

@model Etkinlik.UserModel
<!DOCTYPE html>
<html>
<head>
    
    <!------ Include the above in your HEAD tag ---------->

    <meta name="viewport" content="width=device-width" />
 

<link rel="stylesheet" type="text/css" href="~/css/StyleSheet.css">
<link rel="stylesheet" href="css/bootstrap.min.css">
<title>Index</title>
</head>

<body>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

    <div class="container" style="margin-top:40px">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong> Sign in to continue</strong>
                    </div>
                    <div class="panel-body">
                        <form id="form" method="post" asp-controller="user" asp-action="signup">

                            <fieldset>
                                <div class="row">
                                    <div class="center-block">
                                        <center><i class="fa fa-user-plus" style="font-size:100px" aria-hidden="true"></i>
                                        </center>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="glyphicon glyphicon-user"></i>
                                                </span>
                                                <input name="" class="form-control" placeholder="Full name" maxlength="25" autocomplete="off" type="text">
                                             </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <span class="input-group-text"> <i class="glyphicon glyphicon-envelope"></i> </span>
                                                  </span>
                                                <input name="" class="form-control" placeholder="Email address"  maxlength="25" required autocomplete="off" type="email">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <span class="input-group-text"> <i class="glyphicon glyphicon-user"></i> </span>
                                                </span>
                                                <input class="form-control" placeholder="Username"  maxlength="25" required autocomplete="off">
                                             </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="glyphicon glyphicon-lock"></i>
                                                </span>
                                                <input class="form-control" placeholder="Create password"  maxlength="25" required autocomplete="off" type="password">
                                        </div>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" class="btn btn-lg btn-primary btn-block" value="Sign in">

                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            <div class=" navbar navbar-fixed-bottom ">
                                <footer>
                                    <p>&copy; 2018 - Etkinlik</p>
                                </footer>
                            </div>
                        </form>
                    </div>
                    <div class="panel-footer ">
                        Don't have an account! <a asp-controller="user" asp-action="signup"> Sign Up Here</a>
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>
</html>






