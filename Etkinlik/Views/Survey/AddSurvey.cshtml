@using Etkinlik.Models
@model SurveyModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link rel="stylesheet" type="text/css" href="~/css/StyleSheet.css">

    <title>Diger</title>
</head>

<body>
    <section>
        @using (Html.BeginForm())
        {
            <fieldset>
                <hr />
                <div class="container" style="margin-top:40px">
                    <div class="row">
                        <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                            <div class="form-group">
                                <div class="input-group">
                                    <label>Activity Name</label>
                                    <input asp-for="SurveyTitle" class="form-control" type="text" placeholder="Enter Activity Name" />
                                </div>
                                <span asp-validation-for="SurveyTitle" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                            <div class="form-group">
                                <div class="input-group">
                                    <label> Activity Detail</label>
                                    @Html.TextBoxFor(m => m.SurveyChoiceModel[0].ChoiceName)
                                </div>
                                <span asp-validation-for="SurveyChoiceModel" class="text-danger"></span>
                            </div>
                        </div>
                    </div>



                    <div class="row">
                        <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                            <div class="form-group">
                                <div class="input-group">
                                    <button type="submit" class="btn btn-default">Add Survey</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="navbar navbar-fixed-bottom">
                        <footer>
                            <p>&nbsp;&copy; 2018 - Etkinlik</p>
                        </footer>
                    </div>
                </div>
            </fieldset>
        }
    </section>
</body>
</html>