@model List<SurveyModel>
@inject Etkinlik.Controllers.SurveyController SurveyController
@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/css/Style.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <br />
    <br />
    @if (Model.Count == 0)
    {
        <a href="Survey/Add">
            <button type="submit" class="btn btn-default">Add Survey</button>
        </a>

    }
    else
    {
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">

            @foreach (var survey in Model)
            {
                <div class="container">
                    <div class="row">
                        <ul id="menu" style="float:left; list-style:none; margin-left:20px;">
                            <li>@survey.SurveyTitle</li>
                        </ul>
                        <ul>
                            <li class="panel">
                                @{ string linkName = "link" + survey.Id;
                                    string linkSharp = "#" + linkName;}
                                <button button type="button" class="btn btn-default" data-toggle="collapse" data-parent="#accordion1" href=@linkSharp>Katılımcılar</button>
                                <a href="/Survey/delete/@survey.Id" button type="submit" class="btn btn-default" data-parent="#accordion1">Delete</a>
                                <ul id=@linkName class="collapse">
                                    @foreach (var choice in SurveyController.getChoices(survey))
                                    {
                                        <li>@choice.ChoiceName @choice.Vote</li>
                                    }
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            }
        </form>
    }
</body>
</html>