@model List<SurveyModel>
@inject  Etkinlik.Controllers.SurveyController SurveyController

@inject UserManager<ApplicationUser> userManager
@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/css/StyleSheet.css" rel="stylesheet" type="text/css" />

    <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
</head>
<body>
  @if (Model.Count == 0)
  {
    <a href="Survey/Add">
        <button type="submit" class="btn btn-default">Add Survey</button>
    </a>

  }
  else
  {

    <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">

        @foreach (var survey in Model)
        {
            <div class="container" style="margin-top:40px">
                <div class="row">
                    <div class="col-lg-6 col-md-12">

                        <div class="panel panel-default">
                            <div class="heading">
                                <center>
                                    <strong style="color:white">Anket Tablosu</strong>
                                </center>
                                <hr>
                            </div>
                            <div class="card-body table-responsive">
                                <table class="table table-hover">
                                    <thead class="text-warning" style="color:gray">
                                        <tr>

                                            <th>Anket Sorusu</th>


                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var post in Model)
                                        {
                                            <tr>
                                                <td>@survey.SurveyTitle</td>

                                                @{ string linkName = "link" + survey.Id;
                                                    string linkSharp = "#" + linkName;}
                                                <td class="td-actions text-right">

                                                    <button button type="button" class="btn btn-default" data-toggle="collapse" data-parent="#accordion1" href=@linkSharp>Katılımcılar</button>
                                                    <a href="/Survey/delete/@survey.Id" button type="submit" class="btn btn-primary btn-link btn-sm" data-parent="#accordion1">
                                                        

                                                        <i class="glyphicon glyphicon-remove"></i>
                                                        <div class="ripple-container"></div>
                                                    </a>
                                                    <ul id=@linkName class="collapse">
                                                        @foreach (var choice in SurveyController.getChoices(survey))
                                                        {
                                                    <td>@choice.ChoiceName @choice.Vote</td>
                                                        }
                                                        </ul></td>
                                                    </tr>

                                                    }
                                    </tbody>

                                </table>
                            </div>

                        </div><a href="Survey/Add" button class="btn btn-default">Add Survey</a>

                    </div>
                </div>
                
            </div>
          }
    </form>
   }
        
        </body>
                            </html>