@model List<SurveyModel>
@inject Etkinlik.Controllers.SurveyController SurveyController

@inject UserManager<ApplicationUser> userManager
@{
    ViewData["Title"] = "Anket";
}

<!DOCTYPE html>
<html>
<head>
    <title>Anket</title>
    @Html.Partial("~/Views/metaTag.cshtml")
    <link href="~/css/StyleSheet.css" rel="stylesheet" type="text/css" />
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link rel="stylesheet" href="css/bootstrap.min.css">

    <script src="~/lib/Chart.bundle.min.js"></script>
    <script type="text/javascript" src="~/js/SurveyIndex.js"></script>
</head>
<body>
    @if (Model.Count == 0)
    {
        <div class="error-msg">
            <i class="fa fa-times-circle"></i>
            Please click the below button for the add new survey...
        </div>

        <div class="icon">
            <a href=Survey/Add class="link pluss" target="">
                <span class="fa fa-plus-circle"></span>
            </a>
        </div>

    }
    else
    {
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">

            <div class="container" style="margin-top:80px">
                <div class="row">
                    <div class="col-lg-6 col-md-12">

                        <div class="panel panel-default">
                            <div class="heading">
                                <div class="headingg">
                                    <strong style="color:white">Anket Tablosu</strong>
                                </div>
                            </div>

                            <div class="card-body table-responsive">
                                <table class="table table-hover">
                                    <thead class="text-warning" style="color:gray">
                                        <tr>

                                            <th>Anket Sorusu</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var survey in Model)
                                        {
                                            <tr>
                                                <td>@survey.SurveyTitle</td>

                                                @{ string linkName = "link" + survey.Id;
                                                    string linkSharp = "#" + linkName;}
                                                <td class="td-actions text-right">

                                                    <button onclick="getData(@survey.Id)" button type="button" class="btnnn" data-toggle="collapse" data-parent="#accordion1" href=@linkSharp>Katılımcılar</button>
                                                    <a href="/Survey/delete/@survey.Id" button type="submit" class="btn btn-default" data-parent="#accordion1">
                                                        <i class="glyphicon glyphicon-remove"></i>
                                                    </a>
                                                    <ul id=@linkName class="collapse"></ul>
                                                    @foreach (var choice in SurveyController.getChoices(survey))
                                                    {
                                                        <a>@choice.ChoiceName @choice.Vote</a>
                                                    }

                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>


                    </div>

                    <div class="add-survey">
                        <a href="Survey/Add" class="btn btn-default" style="margin-top:-70px; margin-left:770px">Add Survey</a>
                    </div>
                </div>
            </div>
        </form>

        <div class="chart">

            <canvas id="myChart"></canvas>

            
        </div>
    }
    
    <script type="text/javascript" src="~/js/ChartTest.js"></script>
</body>

</html>