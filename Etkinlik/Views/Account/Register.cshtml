@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<!DOCTYPE html>
<html>
<head>
    <title>Kayıt Ol</title>
    @Html.Partial("~/Views/metaTag.cshtml");
</head>
<body class="body-content">
    <div class="container" style="margin-top:40px">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div class="panel panel-default" style="background-color:#e6f2ff">
                    <div class="heading">
                        <center>
                            <strong style="color:white">Register to continue..</strong>
                        </center>
                        <hr>
                    </div>
                    <hr class="colorgraph">

                    <div class="panel-body">

                        <section>
                            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                                <fieldset>
                                    <h4>Create a new account.</h4>
                                    <div class="row">
                                        <div class="col-sm-12 col-md-10  col-md-offset-1">
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="glyphicon glyphicon-envelope "></i>
                                                    </span>


                                                    <input asp-for="Email" class="form-control" placeholder="Enter e-mail" />

                                                </div>
                                                <span asp-validation-for="Email" class="text-danger"></span>

                                            </div>

                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="glyphicon glyphicon-user "></i>
                                                    </span>

                                                    <input asp-for="FullName" class="form-control" placeholder="Enter Username" />

                                                </div>
                                                <span asp-validation-for="FullName" class="text-danger"></span>

                                            </div>


                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="glyphicon glyphicon-lock "></i>
                                                    </span>


                                                    <input asp-for="Password" class="form-control" minlength="5" placeholder="Enter password" />

                                                </div>
                                                <span asp-validation-for="Password" class="text-danger"></span>
                                            </div>




                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="glyphicon glyphicon-lock "></i>
                                                    </span>


                                                    <input asp-for="ConfirmPassword" class="form-control" minlength="5" placeholder="Enter password again" />

                                                </div>
                                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                            </div>

                                            <button type="submit" class="btn btn-default" style="background-color:#eee;">Register</button>

                                        </div>

                                    </div>
                                </fieldset>
                                <div class=" navbar navbar-fixed-bottom ">
                                    <footer>
                                        <p>&nbsp;&copy;  2018 - Etkinlik</p>
                                    </footer>
                                </div>
                            </form>
                        </section>
                    </div>

                    @section Scripts {
                        @await Html.PartialAsync("_ValidationScriptsPartial")
                    }

                </div>
            </div>
        </div>
    </div>
</body>
</html>
