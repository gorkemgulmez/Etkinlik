@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<!DOCTYPE html>
<html>
<head>

    <!------ Include the above in your HEAD tag ---------->

    <meta name="viewport" content="width=device-width" />


    <link rel="stylesheet" type="text/css" href="~/css/StyleSheet.css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <title>Index</title>
</head>

<body>
    <div class="container" style="margin-top:40px">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong> Sign in to continue</strong>
                    </div>
                    <div class="panel-body">

                        <h2>@ViewData["Title"]</h2>
                        <section>
                            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                                <fieldset>
                                    <h4>Create a new account.</h4>
                                    <div class="row">
                                        <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="glyphicon glyphicon-envelope "></i>
                                                    </span>


                                                    <input asp-for="Email" class="form-control" placeholder="Enter e-mail" />

                                                </div>
                                                <span asp-validation-for="Email" class="text-danger"></span>

                                            </div>

                                           
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="glyphicon glyphicon-lock "></i>
                                                    </span>


                                                    <input asp-for="Password" class="form-control" minlength="5" placeholder="Enter password" />

                                                </div>
                                                <span asp-validation-for="Password" class="text-danger"></span>
                                            </div>




                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="glyphicon glyphicon-lock "></i>
                                                    </span>


                                                    <input asp-for="ConfirmPassword" class="form-control" minlength="5" placeholder="Enter password again" />

                                                </div>
                                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                            </div>

                                            <button type="submit" class="btn btn-default">Register</button>
                                        </div>
                                    </div>
                                    </fieldset>
                                <div class=" navbar navbar-fixed-bottom ">
                                    <footer>
                                        <p>&nbsp;&copy;  2018 - Etkinlik</p>
                                    </footer>
                                </div>
                    </form>
                    </section>
                </div>

                @section Scripts {
                    @await Html.PartialAsync("_ValidationScriptsPartial")
                }

                    </div></div></div></div>
</body></html>