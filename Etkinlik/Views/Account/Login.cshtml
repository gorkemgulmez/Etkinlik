@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/EtkinlikStyle.css" type="text/css" rel="stylesheet" />
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

    <title>Index</title>
</head>

<body class="body-content">
    <div class="container" style="margin-top:40px">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <center>
                        <strong> Log in to continue</strong>
                    </center>
                    <hr class="colorgraph">
                    <div class="panel-body">

                        <section>
                            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                                <fieldset>
                                    <h4>Use a local account to log in.</h4>


                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="row">
                                        <div class="center-block">
                                            <center>
                                                <i class="glyphicon glyphicon-user" style="font-size:80px">

                                                </i>
                                            </center>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="glyphicon glyphicon-envelope "></i>
                                                    </span>


                                                    <input asp-for="Email" class="form-control" placeholder="Enter e-mail " s" />

                                                </div>
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </div>


                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="glyphicon glyphicon-lock "></i>
                                                    </span>


                                                    <input asp-for="Password" class="form-control" placeholder="Enter password" />

                                                </div>
                                                <span asp-validation-for="Password" class="text-danger"></span>
                                            </div>


                                            <div class="form-group">
                                              
                                                <button type="submit" class="btn btn-default" style="background-color:#eee;">Log in</button>
                                            </div>
                                            <div class="form-group">
                                             
                                                    <a asp-action="ForgotPassword">Forgot your password? </a>
                                             <p>
                                                 <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Register as a new user?</a>
</p>
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                                <div class=" navbar navbar-fixed-bottom ">
                                    <footer>
                                        <p>&copy; 2018 - Etkinlik</p>
                                    </footer>
                                </div>
                            </form>
                        </section>
                    </div>
                    <div class="col-md-6 col-md-offset-2">
                        <section>

                            @{
                                var loginProviders = (await SignInManager.GetExternalAuthenticationSchemesAsync()).ToList();
                                if (loginProviders.Count == 0)
                                {

                                }
                                else
                                {
                                    <form asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                                        <div>
                                            <p>
                                                @foreach (var provider in loginProviders)
                                                {
                                                    <button type="submit" class="btn btn-default" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.Name</button>
                                                }
                                            </p>
                                        </div>

                                    </form>
                                }
                            }
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</body>
</html>