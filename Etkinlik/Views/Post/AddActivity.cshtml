@using Etkinlik.Models.ActivityViewModels
@{
    ViewData["Title"] = "AddActivity";
}

@model UpdateActivityModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    
    <link rel="stylesheet" type="text/css" href="~/css/StyleSheet.css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
    <script src="~/js/moment-with-locales.js"></script>

    <script src="~/js/bootstrap-datetimepicker.js"></script>
    <title>Diger</title>

</head>
<body>
    <section>
        <form method="post">
            <fieldset>
                <hr />
                <div class="container" style="margin-top:40px">
                    <div class="row">
                        <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                            <div class="form-group">
                                <div class="input-group">
                                    <label>Activity Name</label>
                                        <input asp-for="PostName" class="form-control" type="text" placeholder="Enter Activity Name" />
                                    </div>
                                            <span asp-validation-for="PostName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                            <div class="form-group">
                                <div class="input-group">
                                    <label> Activity Detail</label>
                                        <input asp-for="PostDesc" class="form-control" type="text" placeholder="Enter Activity Detail" />
                                </div>
                                <span asp-validation-for="PostDesc" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                            <div class="form-group">
                                <div class="input-group">
                                    <input asp-for="PostDate" type="date" value="" />
                                </div>
                                <div class="input-group">
                                    <input asp-for="PostTime" type="time" value="00:00" />
                                </div>
                            </div>
                        </div>
                    </div>


                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="navbar navbar-fixed-bottom">
                        <footer>
                            <p>&nbsp;&copy; 2018 - Etkinlik</p>
                        </footer>
                    </div>
                </div>
            </fieldset>
        </form>
    </section>

</body>
</html>