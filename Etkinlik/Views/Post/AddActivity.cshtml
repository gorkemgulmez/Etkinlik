@using Etkinlik.Models.ActivityViewModels
@{
    ViewData["Title"] = "AddActivity";
}

@model UpdateActivityModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link rel="stylesheet" type="text/css" href="~/css/StyleSheet.css">

    <title>Diger</title>
</head>

<body style="background-color:aliceblue">

        <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
         
                <hr />
                            <div class="container" style="margin-top:40px">
                                <div class="row">

                                    <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                        <div class="form-group">
                                            <div class="input-group">


                                                <label>Activity Name</label>
                                                <input asp-for="PostName" class="form-control" type="text" placeholder="Enter Activity Name" />

                                            </div>
                                            <span asp-validation-for="PostName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                        <div class="form-group">
                                            <div class="input-group">


                                                <label> Activity Detail</label>
                                                <input asp-for="PostDesc" class="form-control" type="text" placeholder="Enter Avtivity Detail" />

                                            </div>
                                            <span asp-validation-for="PostDesc" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                        <div class="form-group">
                                            <div class="input-group">
                                                <input type="date" />
                                            </div>
                                            <div class="input-group">
                                                <input type="time" />
                                            </div>

                                        </div>

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-12 col-md-10 col-md-offset-1">
                                        <div class="form-group">
                                            <div class="input-group">
                                                <button type="submit" class="btn btn-default">Add Activity</button>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="navbar navbar-fixed-bottom">
                                    <footer>
                                        <p>&nbsp;&copy; 2018 - Etkinlik</p>
                                    </footer>
                                </div>


                            </div>
           
        </form>
  

</body>
</html>