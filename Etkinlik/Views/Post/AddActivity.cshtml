@using Etkinlik.Models.ActivityViewModels
@{
    ViewData["Title"] = "AddActivity";
}

@model UpdateActivityModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link rel="stylesheet" type="text/css" href="~/css/StyleSheet.css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
    <script src="~/js/moment-with-locales.js"></script>

    <script src="~/js/bootstrap-datetimepicker.js"></script>
    <title>Diger</title>

</head>
<body>
    <section>
        <form method="post">
            <fieldset>

                <div class="container" style="margin-top:40px">
                    <div class="row">

                        <div class="col-sm-6 col-md-4 col-md-offset-4">
                            <div class="panel panel-default">
                                <div class="panel-body">

                                    <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                        <div class="form-group">
                                            <div class="input-group">
                                                <label>Activity Name</label>
                                                <input asp-for="PostName" class="form-control" type="text" placeholder="Enter Activity Name" />
                                            </div>
                                            <span asp-validation-for="PostName" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                        <div class="form-group">
                                            <div class="input-group">
                                                <label> Activity Detail</label>
                                                <input asp-for="PostDesc" class="form-control" type="text" placeholder="Enter Activity Detail" />
                                            </div>
                                            <span asp-validation-for="PostDesc" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                        <div class="form-group">
                                            <div class="input-group">
                                                <label> Activity Date</label>
                                                <input asp-for="PostDate" type="date" value="" placeholder="Enter Activity Date" />
                                            </div>
                                            <span asp-validation-for="PostDate" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                        <div class="form-group">
                                            <div class="input-group">
                                                <label> Activity Time</label>
                                                <input asp-for="PostTime" type="time" value="00:00" placeholder="Enter Activity Time" />
                                            </div>
                                            <span asp-validation-for="PostTime" class="text-danger"></span>
                                        </div>
                                    </div>



                                    <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                        <div class="form-group">
                                            <div class="input-group">
                                                <button type="submit" class="btn btn-default">Add Activity</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                </div>
                    </div>

                <div class="navbar navbar-fixed-bottom">
                    <footer>
                        <p>&nbsp;&copy; 2018 - Etkinlik</p>
                    </footer>
                </div>
            </fieldset>
        </form>
    </section>

</body>
</html>