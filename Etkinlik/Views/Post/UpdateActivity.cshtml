@using Etkinlik.Models.ActivityViewModels

@using Etkinlik.Models.ActivityViewModels
@{
    ViewData["Title"] = Model.PostName;
}

@model UpdateActivityModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />


    <link rel="stylesheet" type="text/css" href="~/css/StyleSheet.css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <title>Diger</title>
</head>

<body>
    <div class="container" style="margin-top:40px">


        <section>
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <fieldset>
                    <hr />
                    <div class="row">
                        <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                            <div class="form-group">
                                <div class="input-group">


                                    <label>Activity Name</label>
                                    <input asp-for="PostName" class="form-control" type="text" placeholder="Enter Activity Name" />

                                </div>
                                <span asp-validation-for="PostName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                            <div class="form-group">
                                <div class="input-group">


                                    <label> Activity Detail</label>
                                    <input asp-for="PostDesc" class="form-control" type="text" placeholder="Enter Avtivity Detail" />

                                </div>
                                <span asp-validation-for="PostDesc" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">

                        <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                            <div class="form-group">

                                <label> Activity Date & Time</label>
                                <div class="input-group date" id="datetimepicker1">

                                    <input asp-for="PostTime" class="form-control" type="text" placeholder="Enter Activity Time" />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="container">
                        <div class="row">
                            <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                <div class="form-group">
                                    <div class="input-group">

                                        <input method="delete" asp-page-handler="DeleteActivity" class="btn btn-default" type="submit" value="Update Activity" />
                                        <a href="/Post/delete/@Model.Id" class="btn btn-default" type="submit"> Delete Activity</a>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="navbar navbar-fixed-bottom">
                        <footer>
                            <p>&nbsp;&copy; 2018 - Etkinlik</p>
                        </footer>
                    </div>

                </fieldset>
            </form>
        </section>
    </div>
</body>
</html>