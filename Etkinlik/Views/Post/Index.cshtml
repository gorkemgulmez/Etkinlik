@model List<PostModel>
@inject Etkinlik.Controllers.PostController PostController
@{
    ViewData["Title"] = "Etkinlik";
}

<!DOCTYPE html>
<html>
<head>
    <title>Etkinlik</title>
    @Html.Partial("~/Views/metaTag.cshtml")
</head>
<body>
    <br />
    <br />
    @if (Model.Count == 0)
    {
        <div class="icon">
            <a href=Post/Add class="link plus" target="">
            <span class="fa fa-plus-circle"></span></a>


        </div>
    }
    else
    {
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">

            <div class="container" style="margin-top:40px">
                <div class="row">

                    <div class="col-lg-6 col-md-12">

                        <div class="panel panel-default">
                            <div class="heading">
                                <center>
                                    <strong style="color:white">Etkinlik Tablosu</strong>
                                </center>

                            </div>


                            <div class="card-body table-responsive">
                                <table class="table table-hover">
                                    <thead class="text-warning" style="color:gray">
                                        <tr>

                                            <th>Etkinlik Adı</th>
                                            <th>Etkinlik Ayrıntısı</th>
                                            <th>Etkinlik Saat ve Tarihi</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var post in Model)
                                        {
                                            <tr>
                                                <td>@post.PostName</td>
                                                <td>@post.PostDesc</td>
                                                <td>@post.PostDate.Day:@post.PostDate.Month:@post.PostDate.Year @post.PostTime</td>

                                                @{ string linkName = "link" + post.Id;
                                                    string linkSharp = "#" + linkName;}
                                                <td class="td-actions text-right">

                                                        <i class="glyphicon glyphicon-user" data-toggle="collapse" data-parent="#accordion1" href=@linkSharp></i>

                                                            <a href="Post/update/@post.Id" button type="submit" class="btn btn-primary btn-link btn-sm" data-parent="#accordion1">

                                                                <i class="glyphicon glyphicon-pencil"></i>

                                                                <div class="ripple-container"></div>
                                                            </a>
                                                            <a href="Post/delete/@post.Id" button type="submit" class="btn btn-primary btn-link btn-sm" data-parent="#accordion1">
                                                                <i class="glyphicon glyphicon-remove"></i>
                                                                <div class="ripple-container"></div>

                                                            </a>


                                                        <ul id=@linkName class="collapse">
                                                            @foreach (var userName in PostController.getUsers(post))
                                                            {
                                                                <li>@userName</li>
                                                            }
                                                        </ul>
</td>


                                            </tr>
                                                    }
                                    </tbody>
                                </table>


                            </div>
                        </div><a href="Post/Add"
   button class="btn btn-default">
    Add Activity
</a>
                    </div>


                    </div></div>



        </form>
                                                    }
</body>
</html>
